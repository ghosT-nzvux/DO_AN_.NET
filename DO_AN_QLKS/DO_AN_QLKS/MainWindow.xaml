<Window x:Class="DO_AN_QLKS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QUẢN LÍ KHÁCH SẠN"
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F4F6F8" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Margin="12">
                    <TextBlock Text="Hệ Thống Quản Lí Khách Sạn Siêu VIP Pro"
                               FontWeight="Bold" FontSize="18"
                               TextWrapping="Wrap" MaxWidth="500"/>
                    <TextBlock Text="Bảng điều khiển" Foreground="#666666" Margin="0,2,0,8"/>

                    <Border Background="#EDEFF3" Padding="10" Margin="0,0,0,8" BorderBrush="#DADFE6" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Người dùng" FontSize="12" Foreground="#666666"/>
                            <TextBlock x:Name="txtCurrentUser" Text="(chưa đăng nhập)" FontWeight="SemiBold"/>

                        </StackPanel>
                    </Border>
                    <Separator/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid MinHeight="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualHeight}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="12">
                            <Button x:Name="btnUsers" Content="Quản lý tài khoản nhân viên" Margin="0,0,0,8" Padding="10,6" Click="BtnUsers_Click"/>
                            <Button x:Name="btnRooms" Content="Quản lý phòng" Margin="0,0,0,8" Padding="10,6" Click="BtnRooms_Click"/>
                            <Button x:Name="btnCustomers" Content="Quản lý khách hàng" Margin="0,0,0,8" Padding="10,6" Click="BtnCustomers_Click"/>
                            <Button x:Name="btnServices" Content="Quản lý dịch vụ" Margin="0,0,0,8" Padding="10,6" Click="BtnServices_Click"/>
                            <Button x:Name="btnReservation" Content="Đặt phòng" Margin="0,0,0,8" Padding="10,6" Click="BtnReservation_Click"/>
                            <Button x:Name="btnCheckout" Content="Trả phòng &amp; Thanh toán" Margin="0,0,0,8" Padding="10,6" Click="BtnCheckout_Click"/>
                            <Button x:Name="btnInvoices" Content="Quản lý hóa đơn" Margin="0,0,0,8" Padding="10,6" Click="BtnInvoices_Click"/>
                            <Button x:Name="btnInventory" Content="Quản lý kho" Margin="0,0,0,8" Padding="10,6" Click="BtnInventory_Click"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="12,8,12,12">
                            <Separator Margin="0,0,0,8"/>
                            <Button x:Name="btnLogout" Content="Đăng xuất" Padding="10,6" HorizontalAlignment="Stretch" Click="BtnLogout_Click" Background="#FFF44F4F"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

            </DockPanel>
        </Border>

        <Border Grid.Column="1" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Background="#F9FBFD" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="12">
                    <TextBlock x:Name="txtPageTitle" Text="Chào mừng" FontSize="16" FontWeight="Bold"/>
                </Border>

                <ContentControl x:Name="ContentHost" Grid.Row="1">
                    <Grid>
                        <Image Source="/Images/welcome.jpg"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                    </Grid>
                </ContentControl>

            </Grid>
        </Border>
    </Grid>
</Window>
