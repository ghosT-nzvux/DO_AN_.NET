<Window x:Class="DO_AN_QLKS.NguoiDungDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tài khoản" Height="320" Width="520"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Username:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUsername" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="Họ tên:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtFullName" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtEmail" Grid.Row="2" Grid.Column="1"/>

        <TextBlock Text="Điện thoại:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPhone" Grid.Row="3" Grid.Column="1"/>

        <TextBlock Text="Vai trò:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbRole" Grid.Row="4" Grid.Column="1"
                  DisplayMemberPath="RoleName" SelectedValuePath="RoleId"/>

        <Grid Grid.Row="5" Grid.ColumnSpan="2" Margin="0,8,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="chkActive" Content="Kích hoạt"
                      IsChecked="True" VerticalAlignment="Center" Grid.Column="0"/>

            <TextBlock Text="Mật khẩu mới:" VerticalAlignment="Center" Grid.Column="2"/>
            <PasswordBox x:Name="pbPassword" Width="160" Grid.Column="4" VerticalAlignment="Center"/>
            <TextBlock x:Name="lblPwdHint" Text="(để trống nếu không đổi)"
                       Foreground="Gray" VerticalAlignment="Center" Grid.Column="6"/>
        </Grid>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Lưu" Padding="12,6" IsDefault="True"/>
            <Button Content="Hủy" Padding="12,6" Margin="8,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

