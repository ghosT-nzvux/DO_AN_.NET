<UserControl x:Class="DO_AN_QLKS.Quanlitaikhoannhanvien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal"
            HorizontalAlignment="Right" Margin="0,0,0,12">
            <Button x:Name="btnAdd" Content="Thêm" Padding="12,6"/>
            <Button x:Name="btnEdit" Content="Sửa" Margin="8,0,0,0" Padding="12,6"/>
            <Button x:Name="btnDelete" Content="Xóa" Margin="8,0,0,0" Padding="12,6"/>
        </StackPanel>


        <DataGrid Grid.Row="1" x:Name="dgUsers"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username"  Binding="{Binding Username}"   Width="1*"/>
                <DataGridTextColumn Header="Họ tên"    Binding="{Binding FullName}"   Width="1.2*"/>
                <DataGridTextColumn Header="Email"     Binding="{Binding Email}"      Width="1.2*"/>
                <DataGridTextColumn Header="Điện thoại" Binding="{Binding Phone}"     Width="0.9*"/>
                <DataGridTextColumn Header="Vai trò"   Binding="{Binding RoleName}"   Width="0.9*"/>
                <DataGridCheckBoxColumn Header="Kích hoạt" Binding="{Binding IsActive}" Width="0.7*"/>
                <DataGridTextColumn Header="Ngày tạo"  Binding="{Binding CreatedAt}"  Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
