<UserControl x:Class="DO_AN_QLKS.Quanlidichvu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,0,16,12">
            <Button x:Name="btnAdd" Content="Thêm" Padding="12,6"/>
            <Button x:Name="btnEdit" Content="Sửa" Margin="8,0,0,0" Padding="12,6"/>
            <Button x:Name="btnDelete" Content="Xóa" Margin="8,0,0,0" Padding="12,6"/>
        </StackPanel>


        <DataGrid Grid.Row="1" x:Name="dgServices"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã DV"      Binding="{Binding Code}"         Width="0.7*"/>
                <DataGridTextColumn Header="Tên dịch vụ" Binding="{Binding Name}"        Width="1.6*"/>
                <DataGridTextColumn Header="Danh mục"    Binding="{Binding Category}"    Width="1.2*"/>
                <DataGridTextColumn Header="Đơn vị tính" Binding="{Binding Unit}"        Width="0.8*"/>
                <DataGridTextColumn Header="Giá"         Binding="{Binding Price}"       Width="0.9*"/>
                <DataGridCheckBoxColumn Header="Đang bán" Binding="{Binding IsActive}"   Width="0.8*"/>
                <DataGridTextColumn Header="Ghi chú"      Binding="{Binding Notes}"      Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    </UserControl>

