<UserControl x:Class="DO_AN_QLKS.Quanliphong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,0,0.2,12.2" Grid.ColumnSpan="3">
            <Button x:Name="btnAdd" Content="Thêm phòng" Margin="8,0,0,0" Padding="12,6"/>
            <Button x:Name="btnEdit" Content="Sửa" Margin="8,0,0,0" Padding="12,6"/>
        </StackPanel>


        <TabControl Grid.ColumnSpan="3" Margin="0,42,0.2,0" Grid.RowSpan="2">
            <TabItem Header="Danh sách">
                <Grid Margin="0,8,0,0">
                    <DataGrid x:Name="dgRooms" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Số phòng"   Binding="{Binding Number}"       Width="0.8*"/>
                            <DataGridTextColumn Header="Loại phòng" Binding="{Binding RoomTypeName}" Width="*"/>
                            <DataGridTextColumn Header="Giá cơ bản"  Binding="{Binding BasePrice}"    Width="0.9*"/>
                            <DataGridTextColumn Header="Sức chứa"    Binding="{Binding Capacity}"     Width="0.7*"/>
                            <DataGridTextColumn Header="Trạng thái"  Binding="{Binding Status}"       Width="0.9*"/>
                            <DataGridTextColumn Header="Ghi chú"      Binding="{Binding Notes}"        Width="1.2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
