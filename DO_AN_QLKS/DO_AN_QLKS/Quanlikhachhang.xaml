<UserControl x:Class="DO_AN_QLKS.Quanlikhachhang"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="497*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0.4,12.4" LastChildFill="False" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Tìm (tên hoặc SĐT):" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="txtKeyword" Width="260" Margin="0,0,8,0"/>
                <Button x:Name="btnSearch" Content="Tìm" Padding="12,6"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button x:Name="btnEdit" Content="Sửa" Padding="12,6"/>
            </StackPanel>
        </DockPanel>


        <DataGrid x:Name="dgCustomers"
          AutoGenerateColumns="False"
          IsReadOnly="False"               
          SelectionMode="Single"
          SelectionUnit="FullRow"
          RowEditEnding="dgCustomers_RowEditEnding"
          PreviewKeyDown="dgCustomers_PreviewKeyDown" Grid.ColumnSpan="2" Margin="0,42,0.4,0" Grid.RowSpan="2">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ tên"       Binding="{Binding HoTen, UpdateSourceTrigger=PropertyChanged}"     Width="1.4*"/>
                <DataGridTextColumn Header="Điện thoại"   Binding="{Binding DienThoai, UpdateSourceTrigger=PropertyChanged}" Width="0.9*"/>
                <DataGridTextColumn Header="Email"        Binding="{Binding Email, UpdateSourceTrigger=PropertyChanged}"     Width="1.2*"/>
                <DataGridTextColumn Header="CCCD/CMND"    Binding="{Binding CCCD, UpdateSourceTrigger=PropertyChanged}"      Width="1*"/>
                <DataGridTextColumn Header="Địa chỉ"      Binding="{Binding DiaChi, UpdateSourceTrigger=PropertyChanged}"    Width="1.6*"/>
                <DataGridTextColumn Header="Ghi chú"      Binding="{Binding GhiChu, UpdateSourceTrigger=PropertyChanged}"    Width="1.2*"/>
                <DataGridTextColumn Header="Ngày tạo"     Binding="{Binding TaoLuc, StringFormat=\{0:dd/MM/yyyy\}}"          IsReadOnly="True" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
