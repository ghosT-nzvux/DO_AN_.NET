<UserControl x:Class="DO_AN_QLKS.Quanlidatphong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ngày đến:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <DatePicker x:Name="dpCheckIn" Width="140" Margin="0,0,12,0"/>

                    <TextBlock Text="Ngày đi:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <DatePicker x:Name="dpCheckOut" Width="140"/>
                </StackPanel>

                <Button x:Name="btnConfirm" Content="Xác nhận đặt phòng"
                        DockPanel.Dock="Right" Padding="16,8" Margin="8,0,0,0"/>
            </DockPanel>

            <GroupBox Header="Thông tin khách hàng (bắt buộc)" Margin="0,8,0,0">
                <Grid Margin="8,8,8,4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,8">
                        <TextBlock Text="Họ và tên *" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCusName" Padding="6"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                        <TextBlock Text="Điện thoại *" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCusPhone" Padding="6"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,8">
                        <TextBlock Text="Email" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCusEmail" Padding="6"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                        <TextBlock Text="CCCD/CMND" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCusIdCard" Padding="6"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Địa chỉ" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCusAddress" Padding="6" MinWidth="300" Height="60"
                                 AcceptsReturn="True" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <TextBlock Text="Ghi chú" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCusNote" Padding="6" MinWidth="300" Height="60"
                                 AcceptsReturn="True" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Phòng trống">
                <DataGrid x:Name="dgAvailableRooms" Margin="0,8,0,0"
          AutoGenerateColumns="False" IsReadOnly="True"
          SelectionMode="Single" SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" Width="64">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Chọn" Padding="8,4" Tag="{Binding}"
                            Click="PickRoom_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Số phòng"   Binding="{Binding RoomNumber}" Width="0.8*"/>
                        <DataGridTextColumn Header="Loại phòng" Binding="{Binding RoomType}"    Width="*"/>
                        <DataGridTextColumn Header="Giá"        Binding="{Binding Price, StringFormat=N0}" Width="0.8*"/>
                        <DataGridTextColumn Header="Sức chứa"   Binding="{Binding Capacity}"    Width="0.7*"/>
                        <DataGridTextColumn Header="Ghi chú"    Binding="{Binding Notes}"       Width="1.2*"/>
                    </DataGrid.Columns>
                </DataGrid>


            </TabItem>

            <TabItem Header="Đặt phòng">
                <DataGrid x:Name="dgReservations" Margin="0,8,0,0"
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã đặt"       Binding="{Binding BookingCode}"   Width="0.8*"/>
                        <DataGridTextColumn Header="Khách hàng"   Binding="{Binding CustomerName}" Width="1.2*"/>
                        <DataGridTextColumn Header="Phòng"        Binding="{Binding RoomNumber}"   Width="0.8*"/>
                        <DataGridTextColumn Header="Ngày đến" Binding="{Binding CheckIn, StringFormat=\{0:dd/MM/yyyy\}}" Width="*"/>
                        <DataGridTextColumn Header="Ngày đi" Binding="{Binding CheckOut, StringFormat=\{0:dd/MM/yyyy\}}" Width="*"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}"       Width="0.9*"/>
                        <DataGridTextColumn Header="Tổng tiền" Binding="{Binding Total, StringFormat=N0}" Width="0.9*"/>
                        <DataGridTextColumn Header="Ghi chú"  Binding="{Binding Notes}"        Width="1.2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>

